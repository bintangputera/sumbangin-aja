<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SumbanginAjaButton" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@null</item>
        <item name="rippleColor">#40FFFFFF</item>
        <item name="cornerRadius">@dimen/dimen_16dp</item>
        <item name="android:textAppearance">@style/SumbanginAjaTextStyle.Regular.Heading4</item>
    </style>

    <style name="SumbanginAjaButton.WhiteText">
        <item name="android:textAppearance">@style/SumbanginAjaTextStyle.Regular.Heading3.White</item>
    </style>

    <style name="SumbanginAjaButtonOutline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@null</item>
        <item name="cornerRadius">@dimen/dimen_16dp</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>

    <style name="SumbanginAjaTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@null</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>

    <style name="SumbanginAjaTextButton.WhiteText">
        <item name="android:textAppearance">@style/SumbanginAjaTextStyle.Regular.Heading3</item>
    </style>

    <style name="SumbanginAjaButtonOutline.StrokeGrey">
        <item name="strokeColor">@color/colorSoftGrey</item>
        <item name="android:textAppearance">@style/SumbanginAjaTextStyle.Regular.Heading3</item>
    </style>

</resources>