<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="SumbanginAjaTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SumbanginAjaTextStyle.Regular">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    
    <style name="SumbanginAjaTextStyle.Bold">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="SumbanginAjaTextStyle.Regular.Heading4">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SumbanginAjaTextStyle.Regular.Heading3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SumbanginAjaTextStyle.Regular.Heading3.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SumbanginAjaTextStyle.Regular.Heading4.DarkGrey">
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

    <style name="SumbanginAjaTextStyle.Bold.Heading1">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SumbanginAjaTextStyle.Bold.Heading2">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SumbanginAjaTextStyle.Bold.Heading2.DarkGrey">
        <item name="android:textColor">@color/colorDarkGrey</item>
    </style>

</resources>